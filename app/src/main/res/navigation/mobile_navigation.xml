<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/splash_fragment">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.turkcell.turkcellsaha.ui.home.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_navigation_home_to_fragment_content_detail"
            app:destination="@id/fragment_content_detail" />
        <action
            android:id="@+id/action_navigation_home_to_fragment_new_post"
            app:destination="@id/fragment_new_post" />
    </fragment>

    <fragment
        android:id="@+id/fragment_statistics"
        android:name="com.turkcell.turkcellsaha.ui.statistics.StatisticsFragment"
        android:label="@string/title_dashboard"
        tools:layout="@layout/fragment_statistics" />

    <fragment
        android:id="@+id/fragment_content_detail"
        android:name="com.turkcell.turkcellsaha.ui.postdetail.WallContentDetailFragment"
        tools:layout="@layout/fragment_content_detail">

        <argument
            android:name="item"
            android:defaultValue="@null"
            app:argType="com.turkcell.turkcellsaha.data.model.WallContent"
            app:nullable="true" />

    </fragment>
    <fragment
        android:id="@+id/splash_fragment"
        android:name="com.turkcell.turkcellsaha.ui.splash.SplashFragment"
        android:label="SplashFragment"
        tools:layout="@layout/fragment_splash" />
    <fragment
        android:id="@+id/login_fragment"
        android:name="com.turkcell.turkcellsaha.ui.login.LoginFragment"
        android:label="LoginFragment"
        tools:layout="@layout/fragment_login" />
    <fragment
        android:id="@+id/fragment_new_post"
        tools:layout="@layout/fragment_new_post"
        android:name="com.turkcell.turkcellsaha.ui.newpost.NewPostFragment"
        android:label="NewPostFragment">
        <argument
            android:name="mode"
            app:argType="integer"
            android:defaultValue="0" />

        <argument
            android:name="item"
            android:defaultValue="@null"
            app:argType="com.turkcell.turkcellsaha.data.model.WallContent"
            app:nullable="true" />

    </fragment>
</navigation>